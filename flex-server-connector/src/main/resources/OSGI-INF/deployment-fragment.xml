<?xml version="1.0"?>

<fragment>


  <extension target="application#MODULE">

    <module>
      <ejb>${bundle.fileName}</ejb>
    </module>

  </extension>


  <!-- comment that to disable filter based auth -->
  <extension target="web#FILTER-MAPPING">

    <filter-mapping>
      <filter-name>NuxeoAuthenticationFilter</filter-name>
      <url-pattern>/flexlogin/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

  </extension>

  <extension target="web#CONTEXT-PARAM">
   <!-- uncomment to restric flamingo usage
   <context-param>
      <param-name>flamingoConfig.webRemoteEnabled</param-name>
      <param-value>true</param-value>
    </context-param>
   -->
  </extension>


  <extension target="web#SERVLET">
    <servlet>
      <servlet-name>Nuxeo Flex Login Servlet</servlet-name>
      <servlet-class>
        org.nuxeo.ecm.platform.ui.flex.auth.FlexLoginServlet
      </servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>Nuxeo Flex Login Servlet</servlet-name>
      <url-pattern>/flexlogin/*</url-pattern>
    </servlet-mapping>
  </extension>


  <install>

    <!--  create a temp dir -->
    <!--  be sure no directory with that name exists -->
    <delete path="nxflexplatform.tmp" />
    <mkdir path="nxflexplatform.tmp" />

    <unzip from="${bundle.fileName}" to="nxflexplatform.tmp">
      <include>OSGI-INF/**</include>
      <include>WEB/**</include>
    </unzip>

    <copy from="nxflexplatform.tmp/WEB/lib" to="lib/" />

    <delete path="nxflexplatform.tmp" />

  </install>

</fragment>


