<?xml version="1.0" encoding="UTF-8"?>

<services-config>
    <services>
        <service
            id="authPingTester"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="authPingTester">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="seam-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>authPingTester</source>
                </properties>
            
            </destination>
        </service>
        <service
            id="ping-service"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="flexStatelessPingTestBean">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="seam-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>flexStatelessPingTestBean</source>
                </properties>
            
            </destination>
        </service>
        <service
            id="voc-service"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="flexVocabularyService">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="seam-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>flexVocabularyService</source>
                </properties>
            
            </destination>
        </service>
        <service
            id="user-service"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="flexUserService">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="seam-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>flexUserService</source>
                </properties>
            
            </destination>
            </service>
        <service
            id="flexRepositoryService"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="flexRepositoryService">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="seam-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>flexRepositoryService</source>
                </properties>
            
            </destination>
            </service>
  <service
            id="flexActionsService"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="flexActionsService">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="seam-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>flexActionsService</source>
                </properties>
            </destination>
      </service>
        <service
            id="documentAPI-service"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="flexRepositoryService">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="seam-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>flexRepositoryService</source>
                </properties>
            
            </destination>
            </service>
    </services>
    
    <factories>
        <factory id="seamFactory" class="org.nuxeo.ecm.platform.ui.granite.factory.NuxeoSeamServiceFactory" />
    </factories>

    <channels>
        <channel-definition id="seam-amf" class="mx.messaging.channels.AMFChannel">
            <endpoint
                uri="http://{server.name}:{server.port}/nuxeo/nuxeo-amf/amf"
                class="flex.messaging.endpoints.AMFEndpoint"/>
        </channel-definition>

        <!--server.port and server.name are resolved dynamically at run time-->
    </channels>

</services-config>
