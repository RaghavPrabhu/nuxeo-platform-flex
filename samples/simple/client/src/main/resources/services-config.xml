<?xml version="1.0" encoding="UTF-8"?>

<services-config>
    <services>
        
        <service
            id="ping-service"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="flexStatelessPingTestBean">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="nx-amf"/>
            </channels>
                <properties>
                    <factory>seamFactory</factory>
                    <source>flexStatelessPingTestBean</source>
                </properties>
            
            </destination>
        </service>
        
        
        <service
            id="comment-service"
            class="flex.messaging.services.RemotingService"
            messageTypes="flex.messaging.messages.RemotingMessage">

            <!--
            Note:
            this value is used on client and server side.
            this is a Seam component name.
            -->
            <destination id="commentManager">
            <channels>
                <!--
                Note:
                this is URL/channel configuration
                -->
                <channel ref="nx-amf"/>
            </channels>
                <properties>
                    <factory>nxruntimeFactory</factory>
                    <class>org.nuxeo.ecm.platform.comment.api.CommentManager</class>
                </properties>
            
            </destination>
        </service>
        
    </services>
    
    <factories>
        <factory id="seamFactory" class="org.nuxeo.ecm.platform.ui.granite.factory.NuxeoSeamServiceFactory" />
        <factory id="nxruntimeFactory" class="org.nuxeo.ecm.platform.ui.granite.factory.NuxeoRuntimeServiceFactory" />
    </factories>
    

   <channels>
        <channel-definition id="nx-amf" class="mx.messaging.channels.AMFChannel">
            <endpoint
                uri="http://{server.name}:{server.port}/nuxeo/nuxeo-amf/amf"
                class="flex.messaging.endpoints.AMFEndpoint"/>
        </channel-definition>


        <!--server.port and server.name are resolved dynamically at run time-->
    </channels>

</services-config>
