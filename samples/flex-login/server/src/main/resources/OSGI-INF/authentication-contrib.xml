<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.ui.web.auth.flex.sample">

 <require>org.nuxeo.ecm.platform.ui.web.auth.defaultConfig</require>
 <require>org.nuxeo.ecm.platform.ui.web.auth.WebEngineConfig</require>
 <require>org.nuxeo.ecm.platform.ui.web.auth.flex</require>

  <extension
    target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
    point="chain">

    <authenticationChain>
      <plugins>
        <plugin>BASIC_AUTH</plugin>
        <plugin>FLEX_AUTH</plugin>
        <plugin>FORM_AUTH</plugin>
        <plugin>WEBENGINE_FORM_AUTH</plugin>        
        <plugin>ANONYMOUS_AUTH</plugin>
        <plugin>WEBSERVICES_AUTH</plugin>
      </plugins>
    </authenticationChain>

  </extension>

  <extension
    target="org.nuxeo.ecm.platform.ui.web.auth.service.PluggableAuthenticationService"
    point="startURL">

    <startURLPattern>
      <patterns>
        <pattern>flexsamples/</pattern>
      </patterns>
    </startURLPattern>

  </extension>

</component>
